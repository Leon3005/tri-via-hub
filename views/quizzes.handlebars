{{> private-navbar}}

<main>
  <div class="jumbotron m-3">
    <h1 class="m-3 text-center">Take a Quiz</h1>
  </div>
  <div class="container">
    <form class="d-flex" id="quizSearch">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
        id="searchQuery"
      />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
  <div class="d-flex flex-wrap justify-content-evenly m-5">
    {{#if formattedQuizzes}}
    {{#each formattedQuizzes as |quiz|}}
    {{> quiz-search-card}}
    {{/each}}
    {{else}}
    <h2 class="text-danger">No results found...</h2>
    {{/if}}
  </div>
</main>